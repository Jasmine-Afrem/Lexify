<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme for MainActivity and other content activities -->
    <style name="Theme.Lexify.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Your existing items -->
        <item name="colorPrimary">@color/lex_purple_primary</item>
        <item name="colorOnPrimary">@color/lex_surface_color</item>
        <item name="android:textSize">16sp</item>

        <!-- Add other M3 theme attributes as needed, e.g.: -->
        <item name="colorSurface">@color/lex_surface_color</item>
        <item name="colorOnSurface">@color/lex_text_on_surface</item>
        <!-- ... other app theme attributes ... -->
    </style>

    <!-- Theme for the SYSTEM Splash - Make it match your XML background -->
    <style name="Theme.Lexify.MinimalSystemSplash" parent="Theme.SplashScreen">
        <!-- Set background to match your activity_splash.xml background -->
        <item name="windowSplashScreenBackground">@color/lex_surface_color</item>

        <!-- Provide a transparent or minimal icon so it's not prominent -->
        <!-- Option A: A tiny transparent drawable -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/transparent_pixel</item>
        <!-- Option B: If you must provide your logo, it will still flash briefly -->
        <!-- <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item> -->

        <!-- No icon background color -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Duration of the animated icon (system splash icon). Set to 0. -->
        <item name="windowSplashScreenAnimationDuration">0</item>

        <!-- Theme to apply to SplashActivity once system is done -->
        <item name="postSplashScreenTheme">@style/Theme.Lexify.App</item>
    </style>

    <!-- res/values/themes.xml -->
    <style name="Lexify.Button.Base" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item> <!-- Or true if you prefer all caps -->
        <item name="android:elevation">2dp</item>
        <!-- Default text size for most buttons, can be overridden -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Lexify.Button.Primary" parent="Lexify.Button.Base">
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_text_on_purple_primary</item>
        <!-- Larger text for primary action buttons like "Submit Guess" -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Lexify.Button.Secondary" parent="Lexify.Button.Base">
        <item name="backgroundTint">@color/lex_purple_secondary</item>
        <item name="android:textColor">@color/lex_text_on_purple_secondary</item>
        <!-- Text size for Hint, can be same as base or slightly different -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Lexify.Button.GiveUp" parent="Lexify.Button.Base">
        <item name="backgroundTint">@color/lex_accent_pink</item>
        <item name="android:textColor">@color/lex_text_on_pink</item>
        <!-- Text size for Give Up, can be same as base or slightly different -->
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ... (Lexify.CardView remains the same) ... -->
    <style name="Lexify.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/lex_surface_color</item>
    </style>

    <style name="PurpleKeyboardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <!-- Adjust or remove marginBottom as needed -->
        <item name="android:layout_marginBottom">2dp</item> <!-- Try a smaller value -->
        <!-- OR remove it completely if you want no extra space beyond button margins: -->
        <!-- <item name="android:layout_marginBottom">0dp</item> -->
        <item name="android:gravity">center</item>
    </style>

    <style name="PurpleKeyboardButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">1dp</item> <!-- Slightly reduced margin -->
        <item name="android:layout_marginEnd">1dp</item>   <!-- Slightly reduced margin -->
        <item name="android:paddingTop">1dp</item>      <!-- Balanced padding -->
        <item name="android:paddingBottom">10dp</item>   <!-- Balanced padding -->
        <item name="android:textSize">16sp</item>        <!-- Slightly larger, more legible text -->
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">44dp</item>       <!-- Ensure a decent minimum touch height -->
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_text_on_purple_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">1dp</item>
        <item name="rippleColor">@color/lex_purple_primary_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PurpleKeyboardButton.Special" parent="PurpleKeyboardButton">
        <item name="android:layout_weight">1.4</item>
        <item name="backgroundTint">@color/lex_purple_secondary</item>
        <item name="android:textColor">@color/lex_text_on_purple_secondary</item>
    </style>
</resources>