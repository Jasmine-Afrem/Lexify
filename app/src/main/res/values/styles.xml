<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Lexify.AlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/lex_surface_color</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="buttonBarPositiveButtonStyle">@style/Lexify.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Lexify.Button.Dialog.Outlined</item>
        <item name="android:textColorPrimary">@color/lex_text_on_surface</item>
        <item name="android:textColor">@color/lex_text_on_surface</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Lexify.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.Lexify.MaterialAlertDialog" parent="">
        <item name="colorPrimary">@color/lex_purple_primary</item>
        <item name="colorSurface">@color/lex_surface_color</item>
        <item name="colorOnSurface">@color/lex_text_on_surface</item>
    </style>

    <style name="Lexify.Button.Dialog" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/lex_text_on_purple_primary</item>
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Lexify.Button.Dialog.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_purple_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>
</resources> 