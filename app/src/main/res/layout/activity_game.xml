<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/lex_surface_color"
        tools:context=".game.GameActivity">

    <TextView
        android:id="@+id/textViewLevelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Level 1 (1/4)"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/lex_text_on_light_bg"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:id="@+id/gridLayoutWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewLevelInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:columnCount="5"
        android:rowCount="6"
        android:useDefaultMargins="false" />

    <EditText
        android:id="@+id/hiddenEditText"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:importantForAutofill="no"
        android:inputType="textCapCharacters"
        android:maxLength="5"
        android:visibility="gone" />

        <!-- Clue Area with new purple background -->
    <TextView
        android:id="@+id/textViewClueArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridLayoutWord"
        android:minLines="2"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:gravity="center_horizontal"
        android:text="Clue will appear here."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/lex_text_on_purple_primary"
        android:background="@drawable/clue_area_background_purple"
        android:paddingStart="16dp" android:paddingEnd="16dp"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp"/>


    <include
        android:id="@+id/customKeyboardLayout"
        layout="@layout/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/controlsLayout"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSubmitGuess"
        style="@style/Lexify.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Guess"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonHint"
        style="@style/Lexify.Button.Secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Hint"
        android:layout_marginEnd="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonGiveUp"
        style="@style/Lexify.Button.GiveUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Give Up"
        android:layout_marginStart="8dp"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>

