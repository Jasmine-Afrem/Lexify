<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@color/lex_purple_primary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:background="@android:color/white"
        android:src="@drawable/logomic"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        android:contentDescription="App Logo" />

    <TextView
        android:id="@+id/nav_header_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sour_gummy_regular"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/nav_header_player_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sour_gummy_regular"
        android:textSize="20sp"
        android:alpha="0.9" />

    <TextView
        android:id="@+id/nav_header_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Level 1"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/lex_purple_primary" />

</LinearLayout> 