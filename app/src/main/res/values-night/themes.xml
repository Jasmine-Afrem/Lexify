<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lexify" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lex_purple_primary</item>
        <item name="colorPrimaryDark">@color/lex_purple_primary</item>
        <item name="colorAccent">@color/lex_purple_primary</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/lex_purple_primary</item>
        <item name="android:navigationBarColor">@color/lex_dark_background</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/lex_dark_background</item>
        <item name="colorSurface">@color/lex_surface_color_dark</item>
        
        <!-- Text appearance -->
        <item name="android:fontFamily">@font/sour_gummy_regular</item>
        <item name="fontFamily">@font/sour_gummy_regular</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Lexify.Button.Primary</item>
    </style>
    

    <!-- Specific styles for components -->
    <style name="Lexify.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">16dp</item> <!-- Rounded corners -->
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textAllCaps">false</item> <!-- Or true if you prefer -->
    </style>

    <style name="Lexify.Button.Primary" parent="Lexify.Button">
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_surface_color</item>
    </style>

    <style name="Lexify.Button.Secondary" parent="Lexify.Button">
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_surface_color</item>
    </style>

    <style name="Lexify.Button.GiveUp" parent="Lexify.Button">
        <item name="backgroundTint">@color/lex_purple_primary</item>
        <item name="android:textColor">@color/lex_surface_color</item>
    </style>

    <style name="Lexify.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/md_theme_surface</item>
    </style>
</resources>