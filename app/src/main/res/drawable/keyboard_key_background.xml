<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lex_purple_primary_dark" /> <!-- Darker on press -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lex_purple_primary" /> <!-- Main purple for keys -->
            <corners android:radius="8dp" />
            <!-- <stroke android:width="1dp" android:color="@color/lex_purple_primary_light" /> Optional subtle border -->
        </shape>
    </item>
</selector>